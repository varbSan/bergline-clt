{
  "name": "bergline-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:watch": "npm run dev & graphql-codegen --config codegen.ts --watch \"src/**/*.{query,mutation,subscription}.ts\"",
    "devtools": "./node_modules/.bin/vue-devtools",
    "lint": "npx eslint 'src/**'",
    "lint:fix": "npx eslint 'src/**' --fix",
    "prebuild": "graphql-codegen",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "ios": "npm run tauri ios dev 'iPhone 16' & npm run codegen:watch",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch \"src/**/*.{query,mutation,subscription}.ts\""
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@graphql-codegen/cli": "^5.0.5",
    "@radix-icons/vue": "^1.0.0",
    "@tailwindcss/postcss": "^4.0.6",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@vue/apollo-composable": "^4.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "postcss": "^8.5.2",
    "radix-vue": "^1.9.13",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@graphql-codegen/cli": "5.0.5",
    "@graphql-codegen/client-preset": "4.6.3",
    "@graphql-codegen/introspection": "4.0.3",
    "@parcel/watcher": "^2.5.1",
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^9.20.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.0.3",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.1.10"
  }
}
